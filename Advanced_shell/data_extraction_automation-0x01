#!/bin/bash
# data_extraction_automation-0x01
# Extract and format Pokémon info from data.json

DATA_FILE="data.json"

# Check if data.json exists
if [ ! -f "$DATA_FILE" ]; then
    echo "❌ Error: data.json not found. Please run apiAutomation-0x00 first."
    exit 1
fi

# Extract fields with jq
name=$(jq -r '.name' "$DATA_FILE" | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')

# Convert height and weight to meters and kilograms using awk
formatted_height=$(jq -r '.height' "$DATA_FILE" | awk '{printf "%.1f", $1 / 10}')
formatted_weight=$(jq -r '.weight' "$DATA_FILE" | awk '{printf "%.1f", $1 / 10}')

# Output in the exact required format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
