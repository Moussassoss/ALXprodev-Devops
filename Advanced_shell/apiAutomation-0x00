#!/bin/bash
# apiAutomation-0x00
# Script to fetch Pikachu data from Pokémon API

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request with a 10-second timeout and silent mode
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")
status_code=$(tail -c 3 <<< "$response")

# Check if status is 200 (OK)
if [ "$status_code" -eq 200 ]; then
    echo "✅ Successfully fetched data for Pikachu!"
else
    echo "❌ Error fetching data (Status: $status_code)" | tee -a "$ERROR_FILE"
    rm -f "$OUTPUT_FILE" # Remove partial or empty data
    exit 1
fi
